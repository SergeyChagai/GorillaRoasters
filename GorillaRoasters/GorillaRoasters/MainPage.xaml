<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorillaRoasters.MainPage"
             BackgroundImageSource="Background.jpg">

    <StackLayout>
        <Frame BackgroundColor="Transparent" Padding="0,20,0,0" Margin="0,0,0,0" CornerRadius="0"  HeightRequest="40">
            <Label Text="Gorilla Roasters" HorizontalTextAlignment="Center" TextColor="White"
                   FontSize="28" FontFamily="Billabong" Margin="0,0,0,0"/>
        </Frame>
        <Frame BackgroundColor="White" Margin="20,10,20,10" HasShadow="True" Padding="0,0,0,0" HeightRequest="150">
            <Grid Margin="0,0,0,0" Padding="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image Source="CoffeeCup.jpg" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Margin="10,10"></Image>
                <Label Text="Jungle Expresso" Grid.Column="1" Grid.Row="0" FontSize="20" FontAttributes="Bold"
                       VerticalTextAlignment="End" TextColor="#24130c" Margin="0,0,0,0" Padding="0,0,0,0"/>
                <Label Text="By UXDivers" Grid.Column="1" Grid.Row="1" FontSize="10" TextColor="#24130c" Margin="0,0,0,0" Padding="0,0,0,0"
                       Opacity="0.15" VerticalTextAlignment="Start"></Label>
                <Label Text="$ 2.75" Grid.Column="1" Grid.Row="2" FontSize="35" FontAttributes="Bold" TextColor="#24130c" Margin="0,0,0,0"
                       VerticalTextAlignment="Start"></Label>
            </Grid>
        </Frame>
        <Frame BackgroundColor="White" Margin="20,0,20,10" HasShadow="True" Padding="0,0,0,0" HeightRequest="200">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="1"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="1"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="1"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                 <Image Source="intensity.jpg>" Grid.Column="0" Grid.Row="0" Margin="10,0,0,0"></Image>
                <Label Text="Intensity" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold"></Label>
                <Button Text="Strong" Grid.Column="2" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="End" TextColor="Black" FontSize="10" FontAttributes="Bold" 
                       BackgroundColor="#cabaa3" Margin="0,10,30,10" CornerRadius="20" Padding="0,0,0,0" TextTransform="None"></Button>
                
                <BoxView Grid.Row="1" Grid.ColumnSpan="3" BackgroundColor="Black" Margin="30,0,30,0" Opacity="0.05"></BoxView>
                
                <Image Source="acidity.jpg>" Grid.Column="0" Grid.Row="2" Margin="10,0,0,0"></Image>
                <Label Text="Intensity" Grid.Column="1" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold"></Label>
                <Button Text="Sharp" Grid.Column="2" Grid.Row="2" VerticalOptions="Center" HorizontalOptions="End" TextColor="Black" FontSize="10" FontAttributes="Bold" 
                       BackgroundColor="#cabaa3" Margin="0,10,30,10" CornerRadius="20" Padding="0,0,0,0" TextTransform="None"></Button>
                
                <BoxView Grid.Row="3" Grid.ColumnSpan="3" BackgroundColor="Black" Margin="30,0,30,0" Opacity="0.05"></BoxView>

                <Image Source="preparation.jpg>" Grid.Column="0" Grid.Row="4" Margin="10,0,0,0"></Image>
                <Label Text="Preparation" Grid.Column="1" Grid.Row="4" VerticalOptions="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold"></Label>
                <Button Text="8 minutes" Grid.Column="2" Grid.Row="4" VerticalOptions="Center" HorizontalOptions="End" TextColor="Black" FontSize="10" FontAttributes="Bold" 
                       BackgroundColor="#cabaa3" Margin="0,10,30,10" CornerRadius="20" Padding="0,0,0,0" TextTransform="None"></Button>

                <BoxView Grid.Row="5" Grid.ColumnSpan="3" BackgroundColor="Black" Margin="30,0,30,0" Opacity="0.05"></BoxView>

                <Image Source="size.jpg>" Grid.Column="0" Grid.Row="6" Margin="10,0,0,0"></Image>
                <Label Text="Size" Grid.Column="1" Grid.Row="6" VerticalOptions="Center" HorizontalOptions="Start" FontSize="18" FontAttributes="Bold"></Label>
                <Button Text="Small" Grid.Column="2" Grid.Row="6" VerticalOptions="Center" HorizontalOptions="End" TextColor="Black" FontSize="10" FontAttributes="Bold" 
                       BackgroundColor="#cabaa3" Margin="0,10,30,10" CornerRadius="20" Padding="0,0,0,0" TextTransform="None"></Button>
            </Grid>
        </Frame>
        <Button Text="Place your order" Margin="20,5,20,10"  BackgroundColor="#cabaa3" TextTransform="None" FontAttributes="Bold" FontSize="16"/>
        <Button Text="Add to favorites" Margin="20,5,20,10"  BackgroundColor="Transparent" TextTransform="None" FontAttributes="Bold" FontSize="16" 
                BorderColor="#d5d5d5" BorderWidth="1"/>
    </StackLayout>

</ContentPage>
